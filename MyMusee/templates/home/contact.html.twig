{% extends 'base.html.twig' %}

{% block title %}Contactez nous !{% endblock %}

{% block body %}

<div class="jumbotron">
    <h2>Nous Contacter</h2>
</div>

<div class="container">

    <div class="formContact-CreateEdit-Registration-connexion">
        <div class="titleContact-CreateEdit-Registration-connexion">
            <h4>Contact</h4>
            <p>N'hesiter pas à nous informer d'une éventuel erreurs. Merci.</p>
        </div>
        {{ form_start(formContact) }}
        <div>
            <h6>Nom*</h6>
            <div class="row">
                <div class="col">{{ form_row(formContact.firstname)}}</div>
                <div class="col">{{ form_row(formContact.lastname)}}</div>
            </div>
        </div>
        <div>
            <h6>Email*</h6>
            <div>
                {{ form_row(formContact.email)}}
            </div>
        </div>
        <div>
            <h6>Téléphone*</h6>
            <div>
                {{ form_row(formContact.phone)}}
            </div>
        </div>
        <div>
            <h6>Sujet du message*</h6>
            <div>
                {{ form_row(formContact.messagesubject)}}
            </div>
        </div>
        <div>
            <h6>Votre message*</h6>
            <div>
                {{ form_row(formContact.message)}}
            </div>
        </div>
        <div class="btnGroup-btnContact-CreateEdit-Registration-connexion">
            <button type="submit"
                class="btn btn-success btn-btnContact-CreateEdit-Registration-connexion">Envoyer</button>
        </div>
        {{ form_end(formContact) }}
    </div>

</div>
{% endblock %}